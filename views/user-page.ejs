<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/css/user-page.css">
    <script src="/js/user-page.js" defer></script>
    <script>let logged_in = false
    </script>
    <% if(login_cookie && login_cookie === data.id){ %>
        <script>
            logged_in = true
        </script>
    <% } %>
</head>
<body>    
    <div class="text">
        <h2><%= data.username %> </h2>
    </div>

    <div class="img_box_box">
        <div class="img_box">
            <div class="img">
                <img src="<%= data.user_pic %> " alt="">
            </div>
        </div>
    </div>

    <div class="user">
        <% if(login_cookie == data.id){ %> 
            <a href="/user/<%= data.id %>/edit "><button>Edit</button></a>
            <form action="/user/<%= data.id %>?_method=delete" method="post">
                <input type="submit" value="Delete">
            </form>
        <% } %> 

        
        
        <a href="/user-home"><h2>Home</h2></a>
    </div>


</body>
</html>